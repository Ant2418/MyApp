<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.biou_pierson">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_dessin_v2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_dessin_v2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.biou_pierson.LooserActivity"></activity>
        <activity
            android:name="com.example.biou_pierson.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.biou_pierson.PlayActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.biou_pierson.ScoreActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
    </application>

</manifest>